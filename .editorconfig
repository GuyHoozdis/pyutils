# http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{json,yaml,yml}]
insert_final_newline = ignore

[*.{md,markdown}]
indent_size = 4
trim_trailing_whitespace = false

[Makefile]
indent_size = 8
indent_style = tab

[COMMIT_EDITMSG]
max_line_length = 72
insert_final_newline = false

[*.py]
indent_size = 4
max_line_length = 79

[.{pylint,coverage}rc]
max_line_length = 79

[{package.json,tox.ini}]
insert_final_newline = ignore

[{*.html,*.css}]
indent_size = 2

[**.min.js]
indent_style = ignore
insert_final_newline = ignore

[*.{sql,sh,txt}]
max_line_length =
